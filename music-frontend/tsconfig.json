// music-frontend/tsconfig.json
{
	"compilerOptions": {
	  "baseUrl": ".",                            // base is music-frontend/
	  "paths": {
		"common/*": ["../common/*"]              // map 'common/*' to shared folder
	  },
	  "module": "ESNext",
	  "moduleResolution": "Node",
	  "target": "ES2020",
	  "lib": ["DOM", "ES2020"],
	  "jsx": "react-jsx",
	  "strict": true,
	  "esModuleInterop": true,
	  "skipLibCheck": true
	},
	"include": ["src"]
  }
  